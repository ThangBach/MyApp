<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/it_bglogo</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="menuItemColor" parent="AppTheme">
        <item name="android:textColorPrimary">@color/it_White</item>
        <item name="drawerArrowStyle">@style/changeColorDrawerToggle</item>
    </style>
    <style name="changeColorDrawerToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:color">@color/it_White</item>
    </style>
    <style name="capfale" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <declare-styleable name="PasswordEditText">
        <attr name="useStrike" format="boolean"/>
        <attr name="useValidate" format="boolean"/>
    </declare-styleable>

    <style name="DoiMauNgoiSaoRatingBar" parent="AppTheme">
        <item name="colorControlNormal">@color/bgLogo</item>
    </style>

</resources>
